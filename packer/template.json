{
  "builders": [
    {
      "ami_name": "amzn2-ami-hvm-{{ timestamp }}-x86_64-gp2-vault",
      "instance_type": "{{ user `instance_type` }}",
      "source_ami": "{{ user `source_ami` }}",
      "source_ami_filter": {
        "filters": {
          "name": "amzn2-ami-hvm-*-x86_64-gp2",
          "root-device-type": "ebs",
          "virtualization-type": "hvm"
        },
        "most_recent": true,
        "owners": [
          "amazon"
        ]
      },
      "ssh_username": "ec2-user",
      "type": "amazon-ebs"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "sudo yum -qy update",
        "sudo yum -qy install git"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "wget --quiet https://releases.hashicorp.com/terraform/0.12.4/terraform_0.12.4_linux_amd64.zip",
        "sudo unzip -d /usr/bin terraform_0.12.4_linux_amd64.zip",
        "rm terraform_0.12.4_linux_amd64.zip"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "git clone --branch v0.13.1 https://github.com/hashicorp/terraform-aws-vault.git /tmp/terraform-aws-vault",
        "/tmp/terraform-aws-vault/modules/install-vault/install-vault --version {{ user `vault_version` }}"
      ],
      "type": "shell"
    },
    {
      "destination": "/tmp/terraform-aws-vault/modules/private-tls-cert/terraform.tfvars",
      "source": "terraform.tfvars",
      "type": "file"
    },
    {
      "inline": [
        "cd /tmp/terraform-aws-vault/modules/private-tls-cert",
        "terraform init",
        "sudo terraform apply -auto-approve",
        "sudo /tmp/terraform-aws-vault/modules/update-certificate-store/update-certificate-store --cert-file-path /opt/vault/tls/ca.crt.pem"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "instance_type": "t3.small",
    "source_ami": "",
    "vault_version": "1.1.3"
  }
}
