{
  "builders": [
    {
      "ami_name": "amzn2-ami-hvm-{{ timestamp }}-x86_64-gp2-vault",
      "instance_type": "{{ user `instance_type` }}",
      "source_ami": "{{ user `source_ami` }}",
      "source_ami_filter": {
        "filters": {
          "name": "amzn2-ami-hvm-*-x86_64-gp2",
          "root-device-type": "ebs",
          "virtualization-type": "hvm"
        },
        "most_recent": true,
        "owners": [
          "amazon"
        ]
      },
      "ssh_username": "ec2-user",
      "type": "amazon-ebs"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "sudo yum -qy update",
        "sudo yum -qy install python-pip",
        "sudo pip install ansible"
      ],
      "type": "shell"
    },
    {
      "playbook_dir": "roles",
      "playbook_file": "playbook.yml",
      "type": "ansible-local"
    }
  ],
  "variables": {
    "instance_type": "t1.micro",
    "source_ami": "",
    "vault_version": "1.1.3"
  }
}
